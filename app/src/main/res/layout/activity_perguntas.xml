<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.icaro.testeprototipo.PerguntasActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/colorPrimary"
                android:text="Qual o objetivo da sua moto?"
                android:textColor="@android:color/background_dark" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Trabalhar"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Lazer/Passeio/Viajar"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Trilha/OffRoad"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:text="Voce irá andar de moto com?"
                android:textColor="@android:color/background_dark" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Garupa"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Sem garupa"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:text="No seu percurso, qual o limite de velocidade maxima?"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="60km"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="70km"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="80km"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="110km"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:text="Qual estilo de moto você gosta"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Street "/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Trail"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Esportiva"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Naked"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Scooter"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Custom"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="OffRoad"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:text="Qual o valor maximo você pretende gastar?"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="R$ 10.000"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="R$ 18.000"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="R$ 26.000"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
